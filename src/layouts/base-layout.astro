---
/* eslint-disable import/no-unassigned-import, import/extensions */
import 'modern-normalize';
import '@fontsource/ibm-plex-sans-jp/400.css';
import '@fontsource/ibm-plex-sans-jp/700.css';
import {Icon} from 'astro-icon/components';
import '@/styles/common.scss';
import BaseHead from '@/components/base-head.astro';
import {transitionAnimate} from '@/constants/transition';
/* eslint-enable */

interface Props {
	title: string;
	description: string;
}
const {title, description} = Astro.props;

const showHeader = Astro.url.pathname !== '/';
---

<html lang='ja'>
	<head>
		<BaseHead {title} {description} />
	</head>
	<body>
		{
			showHeader && (
				<header>
					<a class='back' href='/'>
						<Icon name='tabler:chevron-left' size={24} />
						<span>トップに戻る</span>
					</a>
				</header>
			)
		}
		<main transition:animate={transitionAnimate}>
			<slot />
		</main>
		<footer>©2024 すえ</footer>

		<style lang='scss'>
			@use '@/styles/breakpoints' as bp;
			@use '@/styles/colors' as c;
			@use '@/styles/shapes' as s;

			html {
				width: 100%;
				height: 100%;
			}

			body {
				display: grid;
				grid-template:
					'header' auto
					'main' 1fr
					'footer' auto / 1fr;
				gap: s.$space;
				justify-content: center;
				width: 100%;
				max-width: 600px;
				min-height: 100%;
				padding: s.$space;
				margin: 0 auto;

				font-family: 'IBM Plex Sans JP', system-ui, 'Segoe UI', Roboto,
					Helvetica, Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji';
				color: c.$fg;
				background-color: c.$bg;

				> header {
					grid-area: header;
				}

				> main {
					grid-area: main;
				}

				> footer {
					grid-area: footer;
					text-align: center;
				}
			}

			.back {
				display: flex;
				align-items: center;
			}
		</style>
	</body>
</html>
