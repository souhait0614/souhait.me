---
import type { JSX } from 'astro/jsx-runtime';

type Props = {
  element?: keyof JSX.DefinedIntrinsicElements;
};
const { element: Element = 'section' } = Astro.props;
---

<Element class='card-body'>
  <slot />
</Element>

<style lang='scss'>
  @use '@/styles/shapes' as s;
  .card-body {
    margin: s.$space;
  }
</style>
