---
import type { HTMLAttributes } from 'astro/types';

import Navigation from './navigation.astro';

type Props = HTMLAttributes<'footer'> & {
  showBackground?: boolean;
};

const { showBackground = false, ...props } = Astro.props;
---

<footer {...props}>
  <Navigation class:list={['navigation', showBackground && 'background']} />
  <small class:list={['copyright', showBackground && 'background']}>©2025 すえ</small>
</footer>

<style lang='scss'>
  @use '@/styles/breakpoints' as bp;
  @use '@/styles/colors' as c;
  @use '@/styles/shapes' as s;

  footer {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    align-items: center;
    font-size: 0.9rem;
  }
  .navigation {
    width: 100%;
    border-radius: s.$radius;
  }
  .copyright {
    padding: 0 0.5rem;
    font-size: 1rem;
    border-radius: s.$radius;
  }

  .background {
    background-color: c.$bg;
  }
</style>
